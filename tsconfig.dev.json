{
  "compilerOptions": {
    "lib": ["es2016", "dom"],
    "target": "es6",
    "allowJs": false,
    "skipLibCheck": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "noEmit": true,
    "jsx": "preserve",
    "isolatedModules": false
  },
  "include": ["src"],
  "exclude": ["*.js"]
}
